<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setname.SetNameActivity">

    <TextView
        style="@style/head_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_kr"
        android:textColor="#FF84FA"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        style="@style/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/symphony_kr"
        android:textColor="#FF84FA"
        android:textSize="45dp"
        android:letterSpacing="0.53"
        android:layout_marginTop="289dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        style="@style/head"
        android:id="@+id/et_name"
        android:layout_width="320dp"
        android:layout_height="51dp"
        android:hint="@string/write_name_kr"
        android:background="@drawable/rectangle_radius_8"
        android:layout_marginTop="371dp"
        android:paddingStart="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        style="@style/head"
        android:id="@+id/btn_name_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/complete_kr"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>